# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/dating_app

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# AdminJS Configuration
ADMIN_COOKIE_SECRET=your_admin_cookie_secret_here
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_SESSION_SECRET=your_admin_session_secret_here
ADMIN_COMPANY_NAME="Dating App Admin"

# OTP Configuration
OTP_EXPIRY=10 # minutes
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3
OTP_BLOCK_DURATION=30 # minutes

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_WHATSAPP_NUMBER=your_twilio_whatsapp_number

# Email Configuration (NodeMailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Dating App

# Media Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=cloud_name
CLOUDINARY_API_KEY=api_key
CLOUDINARY_API_SECRET=api_secret
CLOUDINARY_FOLDER=folder

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Agora Configuration
AGORA_APP_ID=app_id
AGORA_APP_CERTIFICATE=app_certificate
AGORA_API_KEY=your_agora_api_key
AGORA_API_SECRET=your_agora_api_secret

# Firebase Configuration (FCM)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="your_private_key_with_newlines"
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_DATABASE_URL=your_database_url

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Admin Configuration
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=admin123
SUPER_ADMIN_EMAIL=superadmin@example.com
SUPER_ADMIN_PASSWORD=superadmin123

# App Configuration
DEFAULT_COMMISSION_RATE=20
MIN_COMMISSION_RATE=10
MAX_COMMISSION_RATE=50
WITHDRAWAL_FEE=2

# Chat & Call Rates (in coins)
CHAT_RATE_PER_MINUTE=10
VOICE_CALL_RATE_PER_MINUTE=20
VIDEO_CALL_RATE_PER_MINUTE=30

# Payment Limits (in INR)
MIN_DEPOSIT_AMOUNT=99
MAX_DEPOSIT_AMOUNT=10000
MIN_WITHDRAWAL_AMOUNT=1000
MAX_WITHDRAWAL_AMOUNT=50000

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX=100
PASSWORD_RESET_TOKEN_EXPIRES=1 # hour

# File Upload Limits
MAX_FILE_SIZE=10 # MB
MAX_FILES_PER_REQUEST=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,video/mp4,audio/mp3

# Cache Configuration
CACHE_TTL=3600 # seconds
CACHE_CHECK_PERIOD=600 # seconds

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_DIR=logs

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Feature Flags
ENABLE_SMS_OTP=true
ENABLE_WHATSAPP_OTP=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_LIVE_STREAMING=true
ENABLE_VIDEO_CALLS=true
ENABLE_VOICE_CALLS=true
ENABLE_GIFTS=true 